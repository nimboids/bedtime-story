<h2>Story contributions awaiting moderation:</h2>
<% form_tag approve_story_contributions_url do -%>
  <% @story_contributions.each do |story_contribution| -%>
    <p>
      <input type="radio" name="story_contribution_id" id="story_contribution_<%= story_contribution.id %>" value="<%= story_contribution.id %>">
      <label for="story_contribution_<%= story_contribution.id %>"><%= story_contribution.text %></label>
      </input>
    </p>
  <% end -%>
  <%= submit_tag "Approve" %>
<% end -%>
<hr />
<p><%= link_to "Log out", logout_path %> </p>
